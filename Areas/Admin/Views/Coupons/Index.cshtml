@model IEnumerable<Coupon>
@{
    ViewData["Title"] = "Index";
}

<div class="whiteBackground border">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Coupons List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPatrial" />
        </div>
    </div>
    <div>
        @if (Model.Count() == 0)
        {
            <p class="text-danger">No Coupon ....</p>
        }
        else
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Discount)
                    </th>
                    
                    <th>
                        @Html.DisplayNameFor(m => m.MinimunAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.ISAction)
                    </th>
                    <th>

                    </th>
                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <TD>
                    @Html.DisplayFor(m => item.Name)
                </TD>
                <TD>
                    @Html.DisplayFor(m => item.Discount)
                </TD>
                
                <TD>
                    @Html.DisplayFor(m => item.MinimunAmount)
                </TD>
                <TD>
                    @Html.DisplayFor(m => item.ISAction)
                </TD>
                <td style="width:150px">
                    <partial name="_OperationButtonsPartial" model="@item.Id" />
                </td>
            </tr>
                }
            </table>
        }
    </div>
</div>

